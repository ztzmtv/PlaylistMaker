<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="start"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/iv_settings_arrow_back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="28dp"
            android:src="@drawable/arrow_back" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:fontFamily="@font/ys_display_medium"
            android:text="@string/settings_title"
            android:textColor="?attr/colorOnPrimary"
            android:textSize="22sp" />
    </LinearLayout>


    <com.google.android.material.switchmaterial.SwitchMaterial
        android:id="@+id/themeSwitcher"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="start"
        android:layout_marginHorizontal="@dimen/settings_item_margin_horizontal"
        android:text="@string/settings_dark_theme" />

    <TextView
        android:id="@+id/tv_share"
        style="@style/SettingsActivityTextViewStyle"
        android:text="@string/settings_share_app"
        app:drawableEndCompat="@drawable/share" />

    <TextView
        android:id="@+id/tv_support"
        style="@style/SettingsActivityTextViewStyle"
        android:text="@string/settings_write_support"
        app:drawableEndCompat="@drawable/support" />

    <TextView
        android:id="@+id/tv_user_agreement"
        style="@style/SettingsActivityTextViewStyle"
        android:text="@string/settings_user_agreement"
        app:drawableEndCompat="@drawable/arrow_forward" />

</LinearLayout>